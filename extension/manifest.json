{
    "manifest_version": 3,
    "name": "LinkedIn Connection Indexer",
    "version": "1.0.0",
    "description": "Index your LinkedIn connections to a searchable database",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "https://www.linkedin.com/*",
        "https://*.railway.app/*",
        "http://localhost:*/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.svg",
            "48": "icons/icon48.svg",
            "128": "icons/icon128.svg"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.linkedin.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "icons/icon16.svg",
        "48": "icons/icon48.svg",
        "128": "icons/icon128.svg"
    }
}